<b:loop values='data:posts' var='post'>
  <article class='card mb-3' expr:id='&quot;post-&quot; + data:post.id'>

    <!-- >>> Body <<< -->
    <div class='card-block'>
      <!-- Title -->
      <b:if cond='data:post.title'>
        <h1><data:post.title/></h1>
      </b:if>
      <!-- Body -->
      <data:post.body/>
    </div><!-- /.card-block -->

  </article><!-- /.card -->
</b:loop>