<table class='table table-striped'>
  <tbody>
    <b:loop values='data:posts' var='post'>
      <tr expr:id='"post-" + data:post.id'>
        <!-- Date -->
        <td class='text-nowrap'>
          <b:include data='{ customFormat: "dd/MM/YYYY", timeClass: "" }' name='post.datePublished'/>
        </td>
        <!-- Title -->
        <td>
          <b:include data='{ heading: false, headingClass: "", link: true, linkClass: "", noTitleMessage: true }' name='post.title'/>
        </td>
        <!-- Author -->
        <td class='text-nowrap'>
          <b:include data='{ linkClass: "" }' name='post.authorName'/>
        </td>
      </tr>
    </b:loop>
  </tbody>
</table>