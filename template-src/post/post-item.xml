<b:loop values='data:posts' var='post'>
  <article class='card mb-3' expr:id='"post-" + data:post.id'>

    <!-- >>> Header <<< -->
    <div class='card-header'>
      <ul class='list-inline mb-0'>
        <!-- Author -->
        <li class='list-inline-item'>
          <span class='text-muted'><data:messages.postedBy/></span>
          <b:include data='{ linkClass: "text-muted" }' name='post.authorName'/>
        </li>
        <!-- Date -->
        <li class='list-inline-item'>
          <span class='text-muted'><data:messages.on/></span>
          <b:include data='{ customFormat: "MMM dd, YYYY", timeClass: "text-muted" }' name='post.datePublished'/>
        </li>
      </ul><!-- /.list-inline -->
    </div><!-- /.card-header -->

    <!-- >>> Body <<< -->
    <div class='card-block'>
      <!-- Title -->
      <b:include data='{ heading: "h1", headingClass: "", link: false, linkClass: "", noTitleMessage: false }' name='post.title'/>
      <!-- Body -->
      <data:post.body/>
    </div><!-- /.card-block -->

    <!-- >>> Footer <<< -->
    <div class='card-footer'>
      <ul class='list-inline mb-0'>
        <!-- Labels -->
        <li class='list-inline-item'>
          <i aria-hidden='true' class='fa fa-tags text-muted'/>
          <span class='text-muted'><data:messages.labels/>:</span>
          <b:include data='{ comma: false, maxResults: 12, labelLinkClass: "badge badge-default", unlabelledClass: "text-muted" }' name='post.labels'/>
        </li>
      </ul><!-- /.list-inline -->
    </div><!-- /.card-footer -->

  </article><!-- /.card -->
</b:loop>