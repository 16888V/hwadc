 <div class='row'>
  <b:loop values='data:posts' var='post'>
    <article class='col-sm-6 mb-3 mb-sm-5' expr:id='&quot;post-&quot; + data:post.id'>
      <div class='card h-100'>

        <!-- >>> Image <<< -->
        <!-- Featured image -->
        <b:include data='{ size: 320, ratioWidth: 320, ratioHeight: 180, defaultNoImage: true, class: &quot;card-img-top card-img-cover&quot;, style: &quot;height: 180px;&quot; }' name='post.featuredImageBg'/>

        <!-- >>> Body <<< -->
        <div class='card-block'>
          <!-- Title -->
          <b:if cond='data:post.title'>
            <h2 class='card-title h4'>
              <a class='card-title-link' expr:href='data:post.link ? data:post.link : data:post.url' expr:title='data:post.title'>
                <data:post.title/>
              </a>
            </h2>
          </b:if>
          <!-- Date -->
          <h6 class='card-subtitle mb-2'>
            <b:include data='{ customFormat: &quot;MMM dd, YYYY&quot;, class: &quot;text-muted&quot; }' name='post.datePublished'/>
          </h6>
          <!-- Snippet -->
          <div class='card-text'><b:include data='{ length: 150, links: true, linebreaks: true, ellipsis: true, notHasJumpLink: false }' name='post.snippet'/></div>
          <!-- Jump link -->
          <b:include data='{ class: &quot;card-link&quot;, parentClass: &quot;mt-2&quot; }' name='post.jumpLink'/>
        </div><!-- /.card-block -->

        <!-- >>> Footer <<< -->
        <div class='card-footer'>
          <div class='d-flex flex-wrap justify-content-between'>
            <!-- Author -->
            <span>
              <i aria-hidden='true' class='fa fa-user-circle text-muted'/>
              <b:include data='{ class: &quot;text-muted&quot;, noUrlClass: &quot;text-muted&quot; }' name='post.authorName'/>
            </span>
            <!-- Number of comments -->
            <b:if cond='data:post.allowComments'>
              <span>
                <i aria-hidden='true' class='fa fa-comments text-muted'/>
                <b:include data='{ class: &quot;text-muted&quot; }' name='post.numComments'/>
              </span>
            </b:if>
          </div><!-- /flex -->
        </div><!-- /.card-footer -->

      </div><!-- /.card -->
    </article><!-- /col -->
  </b:loop>
</div><!-- /.row -->