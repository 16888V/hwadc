 <div class='row'>
  <b:loop values='data:posts' var='post'>
    <div class='col-sm-6 mb-3 mb-sm-4'>
      <article class='post h-100 mb-0' expr:id='&quot;post-&quot; + data:post.id'>
        <!-- Post image -->
        <b:include data='{ size: 500, aspectRatioWidth: 500, aspectRatioHeight: 250, class: &quot;post-img-top post-img-cover&quot;, style: &quot;min-height: 250px;&quot; }' name='post.imageBg'/>
        <!-- Content -->
        <div class='post-content'>
          <!-- Post title -->
          <b:if cond='data:post.title'>
            <h2 class='post-title h4'>
              <a class='post-title-link' expr:href='data:post.link ? data:post.link : data:post.url'><data:post.title/></a>
            </h2>
          </b:if>
          <!-- Post snippet -->
          <p><b:include data='{ length: 100, links: true, linebreaks: true, ellipsis: true }' name='post.snippet'/></p>
          <!-- Post read more -->
          <p><b:include data='{ class: &quot;btn btn-primary&quot; }' name='post.readMore'/></p>
        </div><!-- /.post-content -->
      </article>
    </div>
  </b:loop>
</div>