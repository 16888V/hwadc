 <div class='row mnb-3 mnb-sm-5'>
  <b:loop values='data:posts' var='post'>
    <article class='col-sm-6 mb-3 mb-sm-5' expr:id='&quot;post-&quot; + data:post.id'>
      <div class='card h-100'>
        <!-- Image -->
        <b:include data='{ size: 320, ratioWidth: 16, ratioHeight: 9, class: &quot;card-img-top card-img-cover&quot;, style: &quot;height: 180px;&quot; }' name='post.imageBg'/>

        <div class='card-block'>
          <!-- Title -->
          <b:if cond='data:post.title'>
            <h2 class='card-title h4'>
              <a class='card-title-link' expr:href='data:post.link ? data:post.link : data:post.url' expr:title='data:post.title'>
                <data:post.title/>
              </a>
            </h2>
          </b:if>
          <!-- Date -->
          <h6 class='card-subtitle mb-2'>
            <b:include data='{ customFormat: &quot;MMM dd, YYYY&quot;, class: &quot;text-muted&quot; }' name='post.datePublished'/>
          </h6>
          <!-- Snippet -->
          <div class='card-text'><b:include data='{ length: 150, links: true, linebreaks: true, ellipsis: true, notHasJumpLink: false }' name='post.snippet'/></div>
          <!-- Jump link -->
          <div class='mt-2'><b:include data='{ class: &quot;card-link&quot; }' name='post.jumpLink'/></div>
        </div>

        <!-- Footer -->
        <div class='card-footer'>
          <div class='d-flex flex-wrap flex-row justify-content-between'>
            <!-- Author -->
            <div class='text-muted'>
              <i aria-hidden='true' class='fa fa-user-circle'/>
              <b:include data='{ class: &quot;text-muted&quot; }' name='post.authorName'/>
            </div>
            <!-- Number of comments -->
            <b:if cond='data:post.allowComments'>
              <div class='text-muted'>
                <i aria-hidden='true' class='fa fa-comments'/>
                <b:include data='{ class: &quot;text-muted&quot; }' name='post.numComments'/>
              </div>
            </b:if>
          </div>
        </div>
      </div>
    </article>
  </b:loop>
</div>