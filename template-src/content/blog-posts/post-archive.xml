<table class='table table-striped'>
  <tbody>
    <b:loop values='data:posts' var='post'>
      <tr expr:id='&quot;post-&quot; + data:post.id'>
        <!-- Date -->
        <td class='text-nowrap'>
          <b:include data='{ customFormat: &quot;dd/MM/YYYY&quot;, class: &quot;&quot; }' name='post.datePublished'/>
        </td>
        <!-- Title -->
        <td>
          <a expr:href='data:post.link ? data:post.link : data:post.url' expr:title='data:post.title ? data:post.title : data:messages.noTitle'>
            <b:eval expr='data:post.title ? data:post.title : data:messages.noTitle'/>
          </a>
        </td>
        <!-- Author -->
        <td class='text-nowrap'>
          <b:include data='{ class: &quot;&quot;, noUrlClass: &quot;&quot; }' name='post.authorName'/>
        </td>
      </tr>
    </b:loop>
  </tbody>
</table>