<b:loop values='data:posts' var='post'>
  <article class='card' expr:id='&quot;post-&quot; + data:post.id'>
    <!-- Header -->
    <div class='card-header'>
      <ul class='list-inline mb-0'>
        <!-- Author -->
        <li class='list-inline-item'>
          <span class='text-muted'><data:messages.postedBy/></span> <b:include data='{ class: &quot;text-muted&quot; }' name='post.authorName'/>
        </li>
        <!-- Date -->
        <li class='list-inline-item'>
          <span class='text-muted'><data:messages.on/></span> <b:include data='{ customFormat: &quot;MMM dd, YYYY&quot;, class: &quot;text-muted&quot; }' name='post.datePublished'/>
        </li>
      </ul>
    </div>

    <div class='card-block'>
      <!-- Title -->
      <b:if cond='data:post.title'>
        <h1><data:post.title/></h1>
      </b:if>
      <!-- Body -->
      <data:post.body/>
    </div>

    <!-- Footer -->
    <div class='card-footer'>
      <ul class='list-inline mb-0'>
        <!-- Labels -->
        <li class='list-inline-item'>
          <span class='text-muted'>
            <i aria-hidden='true' class='fa fa-tags'/>
            <data:messages.labels/>:
          </span>
          <b:include data='{ comma: false, max-results: 12, class: &quot;badge badge-default&quot; }' name='post.labels'/>
        </li>
      </ul>
    </div>
  </article>
</b:loop>