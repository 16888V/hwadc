<b:loop values='data:posts' var='post'>
  <article class='post' expr:id='&quot;post-&quot; + data:post.id'>
    <!-- Content -->
    <div class='post-content'>
      <!-- Post title -->
      <b:if cond='data:post.title'>
        <h2 class='post-title'>
          <a class='post-title-link' expr:href='data:post.link ? data:post.link : data:post.url'><data:post.title/></a>
        </h2>
      </b:if>
      <!-- Post snippet -->
      <p><b:include data='{ length: 150, links: true, linebreaks: true, ellipsis: true }' name='post.snippet'/></p>
    </div><!-- /.post-content -->
  </article>
</b:loop>