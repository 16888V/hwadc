<b:loop values='data:posts' var='post'>
  <article class='card mb-3 mb-sm-5' expr:id='&quot;post-&quot; + data:post.id'>
    <!-- Header -->
    <b:if cond='data:headerByline.items.notEmpty'>
      <div class='card-header'>
        <!-- headerByline -->
        <b:include name='byline.header'/>
      </div>
    </b:if>

    <div class='row no-gutters'>
      <div class='col-sm-3 col-md-4'>
        <!-- Image -->
        <div class='card-block-img-left-sm'>
          <!-- Note: `sm` = 576px, so `max-width` = (`sm` - 1) = 575px. -->
          <b:include data='{ size: 320, sourceSet: [320, 512], sourceSizes: &quot;(max-width: 575px) 512px, 320px&quot;, ratioWidth: 1, ratioHeight: 1, link: true, defaultNoImage: true, class: &quot;card-img-left&quot; }' name='post.featuredImage'/>
        </div>
      </div>
      <div class='col-sm-9 col-md-8'>
        <div class='card-block'>
          <!-- Title -->
          <b:if cond='data:post.title'>
            <h2 class='card-title'>
              <a class='card-title-link' expr:href='data:post.link ? data:post.link : data:post.url' expr:title='data:post.title'>
                <data:post.title/>
              </a>
            </h2>
          </b:if>
          <!-- Snippet -->
          <div class='card-text'><b:include data='{ length: 150, links: true, linebreaks: true, ellipsis: true, notHasJumpLink: true }' name='post.snippet'/></div>
          <!-- Jump link -->
          <b:include data='{ class: &quot;btn btn-primary&quot;, parentClass: &quot;mt-2&quot; }' name='post.jumpLink'/>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <b:if cond='data:footerBylines.notEmpty'>
      <div class='card-footer'>
        <!-- footerBylines -->
        <b:include name='byline.footer'/>
      </div>
    </b:if>
  </article>
</b:loop>