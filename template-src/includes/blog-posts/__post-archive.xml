<table class='table table-striped table-responsive'>
  <tbody>
    <b:loop values='data:posts' var='post'>
      <tr expr:id='"post-" + data:post.id' itemscope='itemscope' itemtype='http://schema.org/BlogPosting'>
        <td>
          <!-- Timestamp -->
          <b:if cond='data:top.showTimestamp'>
            <b:include name='include-timestamp'/>
          </b:if>
        </td>
        <td>
          <!-- Post title -->
          <b:if cond='data:post.title'>
            <span itemprop='name headline'>
              <a expr:href='data:post.url' expr:title='data:post.title' itemprop='url'><data:post.title/></a>
            </span>
          </b:if>
        </td>
        <td>
          <!-- Author -->
          <b:if cond='data:top.showAuthor'>
            <b:include name='include-author'/>
          </b:if>
        </td>
      </tr>
    </b:loop>
  </tbody>
</table>