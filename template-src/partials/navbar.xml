<header class='navbar navbar-toggleable-md navbar-custom'>
  <nav class='container'>
    <a class='navbar-brand' expr:href='data:blog.homepageUrl'>
      <data:blog.title/>
    </a>
    <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbar' aria-controls='navbar' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbar'>
      <ul class='navbar-nav mt-2 mt-md-0'>
        <li class='nav-item'><a expr:class='"nav-link" + (data:view.isHomepage ? " active" : "")' expr:href='data:blog.homepageUrl'>Home</a></li>
        <li class='nav-item'><a class='nav-link disabled' href='#'>Disabled</a></li>
        <li class='nav-item dropdown'>
          <a class='nav-link dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' href='#'>Demo</a>
          <div class='dropdown-menu'>
            <a class='dropdown-item' expr:href='data:blog.homepageUrl'>Homepage</a>
            <div class='dropdown-divider'></div>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/search")'>Search (default) page</a>
            <div class='dropdown-divider'></div>
            <a class='dropdown-item' expr:href='data:blog.homepageUrl path "/search/label/Sample" params { max-results: "12" }'>Search (label) page <span class='badge badge-success'>yep</span></a>
            <a class='dropdown-item' expr:href='data:blog.homepageUrl path "/search/label/Nope" params { max-results: "12" }'>Search (label) page <span class='badge badge-danger'>nope</span></a>
            <div class='dropdown-divider'></div>
            <a class='dropdown-item' expr:href='data:blog.homepageUrl path "/search" appendParams { q: "lorem ipsum" }'>Search (query) page <span class='badge badge-success'>yep</span></a>
            <a class='dropdown-item' expr:href='data:blog.homepageUrl path "/search" appendParams { q: "nope" }'>Search (query) page <span class='badge badge-danger'>nope</span></a>
            <div class='dropdown-divider'></div>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/2016/11")'>Archive page <span class='badge badge-success'>yep</span></a>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/1945/08")'>Archive page <span class='badge badge-danger'>nope</span></a>
            <div class='dropdown-divider'></div>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/2016/11/sample-blog-post-03.html")'>Item page</a>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/p/static-page.html")'>Static page</a>
            <a class='dropdown-item' expr:href='path(data:blog.homepageUrl, "/404")'>Error page</a>
          </div>
        </li>
      </ul>
      <form class='form-inline ml-auto my-2 my-md-0' expr:action='data:blog.searchUrl' method='get'>
        <div role='search'><input class='form-control' expr:aria-label='data:messages.search' expr:placeholder='data:messages.search' name='q' type='search'/></div>
      </form>
    </div><!-- /.navbar-collapse -->
  </nav><!-- /.container -->
</header><!-- /.navbar -->