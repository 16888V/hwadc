<b:if cond='data:post.author'>
  <b:if cond='data:post.author.profileUrl'>
    <a expr:class='data:class' expr:href='data:post.author.profileUrl' expr:title='data:post.author.name'><data:post.author.name/></a>
  <b:else/>
    <span expr:class='data:class'><data:post.author.name/></span>
  </b:if>
</b:if>