<b:comment>=== Homepage ===</b:comment>
<b:if cond='data:view.isHomepage and data:posts.empty'>
  <div class='blog-alert alert alert-warning' role='alert'>
    <i aria-hidden='true' class='fa fa-exclamation-circle'/>
    <data:messages.theresNothingHere/>
  </div>
</b:if>

<b:comment>=== Search (label) page ===</b:comment>
<b:if cond='data:view.search.label'>
  <b:if cond='data:posts.size gte 1'>
    <div class='blog-alert alert alert-success' role='alert'>
      <i aria-hidden='true' class='fa fa-tags'/>
      <data:view.search.resultsMessageHtml/>
    </div>
  <b:else/>
    <div class='blog-alert alert alert-warning' role='alert'>
      <i aria-hidden='true' class='fa fa-tags'/>
      <data:view.search.resultsMessageHtml/>
    </div>
    <b:comment>=== Search form ===</b:comment>
    <div class='card'>
      <div class='card-block'>
        <p class='card-text'><data:messages.noResultsFound/></p>
      </div>
      <ul class='list-group list-group-flush'>
        <li class='list-group-item'>
          <form class='w-100' expr:action='data:blog.searchUrl' method='get' role='search'>
            <div class='input-group'>
              <span class='input-group-addon'><i aria-hidden='true' class='fa fa-search'/></span>
              <input class='form-control' expr:aria-label='data:messages.searchBlog' expr:placeholder='data:messages.searchBlog' id='status-message-search-form' name='q' type='text'/>
            </div>
          </form>
        </li>
      </ul>
    </div>
  </b:if>
</b:if>

<b:comment>=== Search (query) page ===</b:comment>
<b:if cond='data:view.search.query'>
  <b:if cond='data:posts.size gte 1'>
    <div class='blog-alert alert alert-success' role='alert'>
