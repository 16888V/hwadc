<b:if cond='data:headerByline.items.notEmpty'>
  <b:loop values='data:headerByline.items' var='item'>

    <b:comment>=== Share ===</b:comment>
    <b:if cond='data:item.name == &quot;share&quot;'>
      <span class='byline byline-share'>
        <div class='d-inline-block dropdown'>
          <a class='post-share-toggle' href='#' data-toggle='dropdown' expr:title='data:messages.share'>
            <span aria-hidden='true' class='post-share-icon fa fa-share-alt'/>
          </a>
          <div class='dropdown-menu'>
            <b:loop index='i' values='data:sharing.platforms' var='platform'>
              <b:if cond='data:post.shareUrl'>
                <b:if cond='data:platform.key == &quot;twitter&quot;'>
                  <a class='dropdown-item post-share-item post-share-twitter' expr:href='data:post.shareUrl + &quot;&amp;target=twitter&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-twitter-square fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
                <b:if cond='data:platform.key == &quot;facebook&quot;'>
                  <a class='dropdown-item post-share-item post-share-facebook' expr:href='data:post.shareUrl + &quot;&amp;target=facebook&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-facebook-square fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
                <b:if cond='data:platform.key == &quot;googlePlus&quot;'>
                  <a class='dropdown-item post-share-item post-share-google-plus' expr:href='data:post.shareUrl + &quot;&amp;target=googlePlus&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-google-plus-square fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
                <b:if cond='data:platform.key == &quot;pinterest&quot;'>
                  <a class='dropdown-item post-share-item post-share-pinterest' expr:href='data:post.shareUrl + &quot;&amp;target=pinterest&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-pinterest-square fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
                <b:if cond='data:platform.key == &quot;email&quot;'>
                  <a class='dropdown-item post-share-item post-share-email' expr:href='data:post.shareUrl + &quot;&amp;target=email&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-envelope fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
                <b:if cond='data:platform.key == &quot;blogThis&quot;'>
                  <a class='dropdown-item post-share-item post-share-blog-this' expr:href='data:post.shareUrl + &quot;&amp;target=blogThis&quot;' expr:title='data:platform.shareMessage' target='_blank'>
                    <span aria-hidden='true' class='post-share-icon fa fa-pencil-square fa-fw'/>
                    <span class='post-share-name'><data:platform.name/></span>
                  </a>
                </b:if>
              </b:if>
            </b:loop>
          </div>
        </div>
      </span>
    </b:if>

    <b:comment>=== Comments ===</b:comment>
    <b:if cond='data:item.name == &quot;comments&quot;'>
      <span class='byline byline-comments'>
        <b:if cond='data:post.allowComments'>
          <span aria-hidden='true' class='post-comments-icon fa fa-comments'/>
          <a class='post-comments-link' expr:href='data:post.commentsUrl' expr:title='data:messages.comments'>
            <b:message name='messages.numberOfComments'>
              <b:param expr:value='data:post.numberOfComments' name='numComments'/>
            </b:message>
          </a>
        </b:if>
      </span>
    </b:if>

    <b:comment>=== Location ===</b:comment>
    <b:if cond='data:item.name == &quot;location&quot;'>
      <span class='byline byline-location'>
        <span aria-hidden='true' class='post-location-icon fa fa-location-arrow'/>
        <b:if cond='data:item.label != &quot;&quot;'>
          <span class='post-location-label'><data:item.label/></span>
        </b:if>
        <b:if cond='data:post.location'>
          <a class='post-location-link' expr:href='data:post.location.mapsUrl' target='_blank'>
            <data:post.location.name/>
          </a>
        </b:if>
      </span>
    </b:if>

    <b:comment>=== Backlinks ===</b:comment>
    <b:if cond='data:item.name == &quot;backlinks&quot;'>
      <span class='byline byline-backlinks'>
        <span aria-hidden='true' class='post-backlinks-icon fa fa-pencil-square'/>
        <a class='post-backlinks-link' expr:onclick='&quot;window.open(&amp;quot;https://www.blogger.com/blog-this.g?n=&quot; + data:blog.title + &quot;: &quot; + (data:post.title ? data:post.title : data:messages.noTitle) + &quot;&amp;u=&quot; + data:post.url + &quot;&amp;t=&amp;quot;, &amp;quot;_blank&amp;quot;, &amp;quot;directories=no, titlebar=no, toolbar=no, location=no, status=no, menubar=no, scrollbars=yes, resizable=yes, width=800, height=600&amp;quot;);&quot;' href='javascript:void(0)'>
          <b:if cond='data:item.label != &quot;&quot;'>
            <b:attr name='title' expr:value='data:item.label'/>
            <data:item.label/>
          <b:else/>
            <b:attr name='title' value='Links to this post'/>
            Links to this post
          </b:if>
        </a>
      </span>
    </b:if>

    <b:comment>=== Timestamp ===</b:comment>
    <b:if cond='data:item.name == &quot;timestamp&quot;'>
      <span class='byline byline-timestamp'>
        <span aria-hidden='true' class='post-timestamp-icon fa fa-clock-o'/>
        <b:if cond='data:item.label != &quot;&quot;'>
          <span class='post-timestamp-label'><data:item.label/></span>
        </b:if>
        <time class='post-timestamp-date' expr:datetime='data:post.date.iso8601' expr:title='data:post.date.iso8601'>
          <data:post.date/>
        </time>
      </span>
    </b:if>

    <b:comment>=== Author ===</b:comment>
    <b:if cond='data:item.name == &quot;author&quot;'>
      <span class='byline byline-author'>
        <span aria-hidden='true' class='post-author-icon fa fa-user'/>
        <b:if cond='data:item.label != &quot;&quot;'>
          <span class='post-author-label'><data:item.label/></span>
        </b:if>
        <b:if cond='data:post.author'>
          <b:if cond='data:post.author.profileUrl'>
            <a class='post-author-name-link' expr:href='data:post.author.profileUrl' title='Author profile'><data:post.author.name/></a>
          <b:else/>
            <span class='post-author-name'><data:post.author.name/></span>
          </b:if>
        </b:if>
      </span>
    </b:if>

    <b:comment>=== Labels ===</b:comment>
    <b:if cond='data:item.name == &quot;labels&quot;'>
      <span class='byline byline-labels'>
        <span aria-hidden='true' class='post-labels-icon fa fa-tags'/>
        <b:if cond='data:item.label != &quot;&quot;'>
          <span class='post-labels-label'><data:item.label/></span>
        </b:if>
        <b:if cond='data:post.labels'>
          <b:loop index='i' values='data:post.labels' var='label'>
            <a class='post-labels-link' expr:href='data:label.url + &quot;?max-results=10&quot;'><data:label.name/></a><b:eval expr='data:i != (data:post.labels.size - 1) ? &quot;,&quot; : &quot;&quot;'/>
          </b:loop>
        <b:else/>
          <span class='post-labels-unlabelled'>Unlabelled</span>
        </b:if>
      </span>
    </b:if>

    <b:comment>=== Icons ===</b:comment>
    <b:if cond='data:item.name == &quot;icons&quot;'>
      <span class='byline byline-icons'>
        <span aria-hidde='true' class='post-email-icon fa fa-envelope'/>
        <a class='post-email-link' expr:href='data:post.emailPostUrl' expr:title='data:messages.emailPost'>
          <b:message name='messages.emailPost'/>
        </a>
      </span>
    </b:if>

    <b:comment>=== Reactions ===</b:comment>
    <b:if cond='data:item.name == &quot;reactions&quot;'>
      <span class='byline byline-reactions' style='display: inline-block;'>
        <div class='d-flex justify-content-start'>
          <div>
            <span aria-hidden='true' class='post-reactions-icon fa fa-check-square'/>
          </div>
          <b:if cond='data:item.label != &quot;&quot;'>
            <div style='margin-left: 4px;'>
              <span class='post-reactions-label'><data:item.label/></span>
            </div>
          </b:if>
          <div>
            <iframe expr:src='data:post.reactionsUrl' name='reactions' style='position: relative; width: 100%; height: 1.5rem; vertical-align: middle; border: 0;'/>
          </div>
        </div>
      </span>
    </b:if>

  </b:loop><!-- data:headerByline.items -->
</b:if><!-- data:headerByline.items.notEmpty -->