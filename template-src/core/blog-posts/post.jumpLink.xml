<b:if cond='data:post.hasJumpLink'>
  <a b:whitespace='remove' expr:class='data:class' expr:href='fragment(data:post.url, &quot;more&quot;)' role='button'>
    <b:attr name='title' expr:value='data:post.title ? data:post.title : data:messages.noTitle'/>
    <data:blog.jumpLinkMessage/><span class='sr-only'>jump-<data:post.id/></span>
  </a>
<b:else/>
  <b:if cond='data:post.snippets'>
    <a b:whitespace='remove' expr:class='data:class' expr:href='data:post.url' role='button'>
      <b:attr name='title' expr:value='data:post.title ? data:post.title : data:messages.noTitle'/>
      <b:message name='messages.keepReading'/><span class='sr-only'>jump-<data:post.id/></span>
    </a>
  </b:if>
</b:if>