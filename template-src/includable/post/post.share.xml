<div expr:class='data:parentDivClass'>
  <a aria-expanded='false' aria-haspopup='true' b:whitespace='remove' expr:class='data:dropdownToggleLinkClass' expr:id='"dropdownMenuLink" + data:post.id' href='#' data-toggle='dropdown' expr:title='data:messages.share'>
    <b:if cond='data:dropdownToggleType == "icon"'>
      <span class="sr-only">Toggle Dropdown</span>
      <i aria-hidden='true' class='fa fa-share-alt'/>
    </b:if>
    <b:if cond='data:dropdownToggleType == "text"'>
      <data:messages.share/>
    </b:if>
    <b:if cond='data:dropdownToggleType == "all"'>
      <i aria-hidden='true' class='fa fa-share-alt fa-fw'/>
      <data:messages.share/>
    </b:if>
  </a>
  <div expr:aria-labelledby='"dropdownMenuLink" + data:post.id' expr:class='data:dropdownMenuClass'>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=twitter"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-twitter-square fa-fw'/>
      </b:if>
      Twitter
    </a>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=facebook"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-facebook-square fa-fw'/>
      </b:if>
      Facebook
    </a>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=googlePlus"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-google-plus-square fa-fw'/>
      </b:if>
      Google+
    </a>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=pinterest"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-pinterest-square fa-fw'/>
      </b:if>
      Pinterest
    </a>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=email"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-envelope fa-fw'/>
      </b:if>
      Email
    </a>
    <a expr:class='data:dropdownItemLinkClass' expr:href='"https://www.blogger.com/share-post.g?blogID=" + data:blog.blogId + "&amp;postID=" + data:post.id + "&amp;target=blogThis"' target='_blank'>
      <b:if cond='data:dropdownItemIcon'>
        <i aria-hidden='true' class='fa fa-pencil-square fa-fw'/>
      </b:if>
      BlogThis!
    </a>
  </div>
</div>